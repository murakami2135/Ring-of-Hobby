<div class="contaner">
  <div class="row">
    <div class="col-sm-5 text-right">
      <h1>新規作成</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @group, local: true do |f| %>
      <table class="table" border="2">
        <tr>
          <th><%= f.label :name, 'グループ名' %></th><td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :overview, '概要' %></th><td><%= f.text_field :overview %></td>
        </tr>
        <tr>
          <th><%= f.label :image, '画像' %></th><td><%= f.attachment_field :image %></td>
        </tr>
      </table>

    <%= f.submit '新規作成', class: "btn btn-primary" %>
<% end %>
  </div>
